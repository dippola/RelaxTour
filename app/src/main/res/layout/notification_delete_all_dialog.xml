<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/dialog_layout"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/notification_delete_all_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete All Notification"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notification_delete_all_dialog_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Are you sure you want to clear all alerts?" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/notification_delete_all_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="7dp"
            android:background="@drawable/button_design"
            android:text="ok"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/notification_delete_all_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="7dp"
            android:background="@drawable/button_design_2"
            android:text="cancel"
            android:textColor="@color/button_text_color" />
    </LinearLayout>
</LinearLayout>