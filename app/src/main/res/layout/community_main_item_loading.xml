<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingVertical="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/community_main_item_loading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/page_round"
        android:elevation="3dp"
        android:paddingHorizontal="22dp"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.95">

        <ImageView
            android:id="@+id/community_main_item_userimage_loading"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/dialog_layout_line_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/community_main_item_nickname_loading"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintDimensionRatio="1:1"/>

        <TextView
            android:id="@+id/community_main_item_title_loading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:background="@color/dialog_layout_line_color"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintBottom_toTopOf="@+id/community_main_item_nickname_loading"
            app:layout_constraintStart_toEndOf="@+id/community_main_item_userimage_loading"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/community_main_item_nickname_loading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/community_nostrong_color"
            android:background="@color/dialog_layout_line_color"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintBottom_toTopOf="@+id/community_main_item_line_loading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/community_main_item_title_loading" />

        <TextView
            android:id="@+id/community_main_item_date_loading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/dialog_layout_line_color"
            android:textColor="@color/community_nostrong_color"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintBottom_toTopOf="@+id/community_main_item_line_loading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/community_main_item_title_loading" />

        <View
            android:id="@+id/community_main_item_line_loading"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/community_main_line_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/community_main_item_nickname_loading" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/community_main_item_line_loading"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/community_main_item_bottom1_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/community_main_item_bottom2_loading"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/community_main_item_view_icon_loading"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/community_view_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/community_main_item_view_loading"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textSize="13dp"
                    android:background="@color/dialog_layout_line_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/community_main_item_view_icon_loading"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/community_main_item_bottom2_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/community_main_item_bottom3_loading"
                app:layout_constraintStart_toEndOf="@+id/community_main_item_bottom1_loading"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/community_like_icon" />

                <TextView
                    android:id="@+id/community_main_item_like_loading"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:background="@color/dialog_layout_line_color"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/community_main_item_bottom3_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/community_main_item_bottom2_loading"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/community_main_item_comment_icon_loading"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/community_comment_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/community_main_item_comment_count_loading"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/community_main_item_comment_count_loading"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:background="@color/dialog_layout_line_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>