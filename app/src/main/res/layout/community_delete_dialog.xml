<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_layout"
    android:padding="30dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/community_delete_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/community_delete_dialog_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unable to recover after deletion.\nDo you still want to delete it?"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/community_delete_dialog_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please wait..."
            android:layout_marginEnd="5dp"/>
        <ProgressBar
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:indeterminateTint="@color/button_design_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/community_delete_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ok"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="7dp"
            android:background="@drawable/button_design"
            android:textColor="#FFFFFF" />
        <Button
            android:id="@+id/community_delete_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="7dp"
            android:textColor="@color/button_text_color"
            android:background="@drawable/button_design_2"/>
    </LinearLayout>
</LinearLayout>