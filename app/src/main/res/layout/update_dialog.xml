<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_layout"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/update_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="A new version has been released!"
        android:textColor="@color/text_color"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="â€» Please update to the latest version on the Play Store."
        android:textSize="13dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="@color/icon_in_edittext_color"/>

    <TextView
        android:id="@+id/update_dialog_current_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Current version: "
        android:textSize="13dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="@color/icon_in_edittext_color"/>

    <TextView
        android:id="@+id/update_dialog_new_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="New version: "
        android:textSize="14dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="@color/text_color"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/update_dialog_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="go to playtore"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_design"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="7dp"
            android:elevation="5dp"
            android:paddingHorizontal="20dp"/>
    </LinearLayout>

</LinearLayout>