<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_layout"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="30dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="30dp"
        android:padding="30dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/premium_dialog_button_layout"
            android:background="#BFB4B4"/>

        <LinearLayout
            android:id="@+id/premium_dialog_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/premium_dialog_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="7dp"
                android:layout_weight="1"
                android:background="@drawable/button_design"
                android:elevation="5dp"
                android:text="ok"
                android:textColor="@color/button_text_color" />

            <Button
                android:id="@+id/premium_dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="7dp"
                android:layout_weight="1"
                android:background="@drawable/button_design_2"
                android:elevation="5dp"
                android:text="cancel"
                android:textColor="@color/button_text_color" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/premium_dialog_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_load_layout">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>