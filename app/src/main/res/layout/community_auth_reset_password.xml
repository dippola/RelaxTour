<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/dialog_layout">

    <LinearLayout
        android:id="@+id/community_auth_reset_password_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/community_auth_reset_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:textColor="@color/text_color"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/community_auth_reset_password_haveauth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/community_auth_email_icon" />

            <TextView
                android:id="@+id/community_auth_reset_password_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/community_auth_reset_password_nohaveauth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/community_auth_reset_password_edit_email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/edittext"
                android:drawableLeft="@drawable/community_icon_email"
                android:drawablePadding="10dp"
                android:elevation="4dp"
                android:hint="email"
                android:inputType="textWebEmailAddress"
                android:paddingHorizontal="10dp"
                android:textColor="@color/fav_edittext_color"
                android:textColorHint="#aaaaaa"
                android:textCursorDrawable="@drawable/edittext_cursor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:text="Please enter your email" />

            <TextView
                android:id="@+id/community_auth_reset_password_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/error_text_color" />
        </LinearLayout>

        <TextView
            android:id="@+id/community_auth_reset_password_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp" />

        <TextView
            android:id="@+id/community_auth_reset_password_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/community_auth_reset_password_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/community_auth_reset_password_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="7dp"
                android:layout_weight="1"
                android:background="@drawable/button_design"
                android:elevation="5dp"
                android:text="ok"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/community_auth_reset_password_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="7dp"
                android:layout_weight="1"
                android:background="@drawable/button_design_2"
                android:elevation="5dp"
                android:text="cancel"
                android:textColor="@color/button_text_color" />
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/community_auth_reset_password_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/button_design_color" />

    <LinearLayout
        android:id="@+id/community_auth_reset_password_success_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="An email has been sent."
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"/>
        <Button
            android:id="@+id/community_auth_reset_password_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="7dp"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:elevation="5dp"
            android:text="ok"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</RelativeLayout>