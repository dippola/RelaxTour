<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginBottom="2dp"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/bottom_sheet_box"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/storage_manage_dialog_item_img"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/storage_manage_dialog_item_img"
            android:layout_toLeftOf="@+id/storage_manage_dialog_item_delete_btn"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:id="@+id/storage_manage_dialog_item_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="page"
                android:textColor="@color/text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "/>

            <TextView
                android:id="@+id/storage_manage_dialog_item_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="track"/>
        </LinearLayout>

        <Button
            android:id="@+id/storage_manage_dialog_item_delete_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bottom_sheet_playlist_delete_icon" />
    </RelativeLayout>

</RelativeLayout>