<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/dialog_layout"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/community_ask_delete_account_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.5"
        android:text="Delete Account"
        android:textColor="@color/text_color"
        android:textSize="16dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/community_auth_email_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:id="@+id/community_ask_delete_account_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="kmj654649@gmail.com"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <EditText
        android:id="@+id/community_ask_delete_account_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittext"
        android:drawableLeft="@drawable/community_icon_password"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:maxLength="15"
        android:paddingHorizontal="10dp"
        android:textColor="@color/fav_edittext_color"
        android:textColorHint="#aaaaaa"
        android:textCursorDrawable="@drawable/edittext_cursor" />

    <TextView
        android:id="@+id/community_ask_delete_account_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="20dp"
        android:text="Please enter your password."
        android:textSize="13dp" />

    <TextView
        android:id="@+id/community_ask_delete_account_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/error_text_color"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/community_ask_delete_account_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.5"
        android:text="Are you sure you want to Delete Account?"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/community_ask_delete_account_title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.1"
        android:text="â€»If you delete an account, the posts and comments you created with that account will also be deleted." />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/community_ask_delete_account_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="7dp"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:elevation="5dp"
            android:text="ok"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/community_ask_delete_account_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="7dp"
            android:layout_weight="1"
            android:background="@drawable/button_design_2"
            android:elevation="5dp"
            android:text="cancel"
            android:textColor="@color/button_text_color" />
    </LinearLayout>
</LinearLayout>