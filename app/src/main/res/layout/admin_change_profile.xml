<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/admin_change_profile_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.6" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <CheckBox
        android:id="@+id/admin_change_profile_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:text="사진 지우기" />

    <EditText
        android:id="@+id/admin_change_profile_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/edittext"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="asdlfkj" />

    <Button
        android:id="@+id/admin_change_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="ok" />

    <ProgressBar
        android:id="@+id/admin_change_profile_load"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/admin_change_profile_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="o"/>

</LinearLayout>