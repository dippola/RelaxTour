<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_tab_button"
    android:layout_width="60dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/main_tab_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"/>

    <RelativeLayout
        android:id="@+id/main_tab_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_tab_img"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/tab_text_background"
        android:paddingHorizontal="6dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/main_tab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00000000"
            android:textStyle="bold"
            android:text="rain"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/main_tab_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="rain"
        android:layout_below="@+id/main_tab_img"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical" />
</RelativeLayout>