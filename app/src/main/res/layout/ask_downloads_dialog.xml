<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_layout"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/ask_downloads_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:textColor="@color/text_color" />

    <ProgressBar
        android:id="@+id/ask_downloads_dialog_progressbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:progressTint="@color/button_design_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="* If you are not connected to a Wi-Fi connection,\nyou may be charged for your data."
        android:textColor="@color/download_ask_wifi_text_color" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/ask_downloads_dialog_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/text_color"/>

        <ProgressBar
            android:id="@+id/ask_downloads_dialog_2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/ask_downloads_dialog_count"
            android:layout_marginStart="8dp"
            android:indeterminateTint="@color/button_design_color"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/ask_downloads_dialog_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ask_downloads_dialog_button_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="7dp"
                android:layout_weight="1"
                android:background="@drawable/button_design"
                android:elevation="5dp"
                android:text="ok"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/ask_downloads_dialog_button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="7dp"
                android:layout_weight="1"
                android:background="@drawable/button_design_2"
                android:elevation="5dp"
                android:text="cancel"
                android:textColor="@color/button_text_color" />
        </LinearLayout>


        <Button
            android:id="@+id/ask_downloads_dialog_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="7dp"
            android:background="@drawable/button_design"
            android:elevation="5dp"
            android:text="finished"
            android:textColor="#FFFFFF"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>