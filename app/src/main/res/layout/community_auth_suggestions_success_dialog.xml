<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_layout"
    android:padding="30dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/community_auth_suggestions_success_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed sending suggestions"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/community_auth_suggestions_success_dialog_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We will actively reflect\nyour suggestions and update them."
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/community_auth_suggestions_success_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ok"
            android:layout_marginVertical="7dp"
            android:background="@drawable/button_design"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>