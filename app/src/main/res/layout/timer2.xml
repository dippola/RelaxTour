<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_above="@+id/timer2_buttom"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/hourintent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:text="0"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/minintent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:text="0"
            android:textColor="@color/text_color" />

        <EditText
            android:id="@+id/edittime1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal" />

        <ProgressBar
            android:id="@+id/progress_count1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:progressDrawable="@drawable/circularprogressbar" />

        <TextView
            android:id="@+id/text_timer1"
            android:layout_width="55dp"
            android:layout_height="15dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="App closes after countdown."
            android:textColor="@color/text_color"
            android:textSize="12dp" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/timer2_buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/countstart1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stop"
            android:textColor="#ffff"
            android:background="@drawable/button_design"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="7dp"
            android:elevation="5dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/count_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="close"
            android:textColor="@color/button_text_color"
            android:background="@drawable/button_design_2"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="7dp"
            android:elevation="5dp"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>